package com.klef.sdp.backend.service;
import com.klef.sdp.backend.model.Appointment;
import com.klef.sdp.backend.model.Patient;
import com.klef.sdp.backend.model.Doctor;
import com.klef.sdp.backend.repository.AppointmentRepository;
import com.klef.sdp.backend.repository.PatientRepository;
import com.klef.sdp.backend.repository.DoctorRepository;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import java.util.List;

@Service
public class AppointmentServiceImpl implements AppointmentService {

    @Autowired
    private AppointmentRepository appointmentRepository;

    @Autowired
    private PatientRepository patientRepository;

    @Autowired
    private DoctorRepository doctorRepository;

    @Override
    public Appointment bookAppointment(AppointmentDTO dto) {
        Patient patient = patientRepository.findById(dto.getPatientId())
                .orElseThrow(() -> new RuntimeException("Invalid patientId"));

        Doctor doctor = doctorRepository.findById(dto.getDoctorId())
                .orElseThrow(() -> new RuntimeException("Invalid doctorId"));

        Appointment appt = new Appointment();
        appt.setPatientId(patient.getId());
        appt.setDoctorId(doctor.getId());
        appt.setPatientName(patient.getName());
        appt.setPatientContact(patient.getMobileno());
        appt.setDoctorName(doctor.getName());
        appt.setDate(dto.getDate());
        appt.setTimeRange(dto.getTimeRange());
        appt.setReason(dto.getReason());
        appt.setStatus("PENDING");

        return appointmentRepository.save(appt);
    }

    @Override
    public List<Appointment> getAppointmentsByDoctor(int doctorId) {
        return appointmentRepository.findAll()
                .stream().filter(a -> a.getDoctorId() == doctorId).toList();
    }

    @Override
    public List<Appointment> getAppointmentsByPatient(int patientId) {
        return appointmentRepository.findAll()
                .stream().filter(a -> a.getPatientId() == patientId).toList();
    }

    @Override
    public Appointment updateStatus(int id, String status, String feedback, String confirmedTime) {
        Appointment appt = appointmentRepository.findById(id)
                .orElseThrow(() -> new RuntimeException("Invalid appointmentId"));

        appt.setStatus(status);
        if (feedback != null) appt.setDoctorFeedback(feedback);
        if (confirmedTime != null) appt.setConfirmedTime(confirmedTime);

        return appointmentRepository.save(appt);
    }
}
